<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="create-currency-table" author="ilgiznigmatullin (generated)">
        <preConditions onError="HALT" onFail="MARK_RAN" onSqlOutput="IGNORE">
            <and>
                <not>
                    <tableExists tableName="currency" schemaName="${schemaName}"/>
                </not>
            </and>
        </preConditions>
        <createTable tableName="currency" schemaName="${schemaName}">
            <column name="currency_id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable ="false" unique = "true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable ="false" unique = "true"/>
            </column>
            <column name="value" type="numeric(19,2)" defaultValue="0.00">
                <constraints nullable ="false" checkConstraint="value >= 0"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="currency" schemaName="${schemaName}"/>
        </rollback>
    </changeSet>
</databaseChangeLog>